# Loop-Auto Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# REQUIRED - Application will not start without these
# =============================================================================

# Supabase Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_service_role_key_here

# Bolagsverket VDM API (OAuth2)
BOLAGSVERKET_CLIENT_ID=your_client_id_here
BOLAGSVERKET_CLIENT_SECRET=your_client_secret_here

# =============================================================================
# OPTIONAL - Scripts only
# =============================================================================

# Supabase Management API (for database migrations)
SUPABASE_MANAGEMENT_TOKEN=your_management_token_here
SUPABASE_PROJECT_REF=your_project_ref_here

# =============================================================================
# SECURITY - Recommended for production
# =============================================================================

# API Authentication (comma-separated API keys)
# If set, all non-public endpoints require X-API-Key header
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# API_KEYS=your_api_key_1,your_api_key_2

# CORS (comma-separated origins for production)
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# CORS_CREDENTIALS=false

# =============================================================================
# OPTIONAL - Defaults shown
# =============================================================================

# API Server
# API_HOST=0.0.0.0
# API_PORT=8000

# Cache
# CACHE_TTL_HOURS=24

# Scraper Rate Limiting
# ALLABOLAG_DELAY=1.0
# BOLAGSVERKET_DELAY=0.5

# Retry Settings
# MAX_RETRIES=3
# RETRY_BACKOFF=1.5

# Logging
# LOG_LEVEL=INFO
# LOG_FORMAT=console
